{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@*": ["src/*"],
      "@assets/*": ["assets/*"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "strict": true,
    "types": ["node"]
  },
  "include": ["src", "typings"]
}
